# 信息收集系统环境配置文件
# 复制此文件为 .env 并修改相应配置

# 应用配置
SECRET_KEY=your-secret-key-change-this-in-production-at-least-32-characters-long
FLASK_ENV=development
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite:///form_system.db

# 管理员账号配置（首次启动后请立即修改）
ADMIN_EMAIL=admin@system.com
ADMIN_PASSWORD=admin123

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# 安全配置
SESSION_LIFETIME_HOURS=24

# 邮件配置（可选）
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 生产环境配置示例（去掉注释并修改）
# SECRET_KEY=your-production-secret-key-minimum-32-characters
# FLASK_ENV=production
# DEBUG=False
# DATABASE_URL=postgresql://user:password@localhost/formdb
# ADMIN_EMAIL=admin@yourdomain.com
# ADMIN_PASSWORD=your-secure-password