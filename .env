# 信息收集系统环境配置文件 - 开发环境

# 应用配置 - 开发环境
SECRET_KEY=dev-secret-key-for-development-environment-only
FLASK_ENV=development
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite:///form_system.db

# 管理员账号配置（开发环境默认账号）
ADMIN_EMAIL=admin@demo.com
ADMIN_PASSWORD=admin123

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# 安全配置
SESSION_LIFETIME_HOURS=24

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# 支付配置 - 微信支付
# 注意：以下配置为示例值，实际使用时需要替换为真实的商户配置
WECHAT_APP_ID=wx1234567890abcdef
WECHAT_MCH_ID=1234567890
WECHAT_MCH_KEY=your32digitmerchantkeyherexxxxxxxx
WECHAT_NOTIFY_URL=http://your-domain.com/payment/wechat/notify
WECHAT_RETURN_URL=http://your-domain.com/payment/success
WECHAT_SANDBOX=true

# 支付配置 - 支付宝
# 注意：以下配置为示例值，实际使用时需要替换为真实的应用配置
ALIPAY_APP_ID=2021000000000000
ALIPAY_NOTIFY_URL=http://your-domain.com/payment/alipay/notify
ALIPAY_RETURN_URL=http://your-domain.com/payment/success
ALIPAY_SANDBOX=true

# 支付宝密钥配置（实际使用时需要配置真实密钥）
# ALIPAY_PRIVATE_KEY=your_rsa_private_key_content
# ALIPAY_PUBLIC_KEY=alipay_rsa_public_key_content